{{ include('header.twig') }}

    <h1>{{title}}</h1>
    <form action="{{ LMHLagerSave }}" method="POST">
        <div class="form-group col-md-6">
            <label>Lagerbezeichnung</label>
            <input type="text" class="form-control" name="LGR_bezeichnung" value="{{ lager.LGR_bezeichnung }}" required>
        </div>
        <div class="form-group col-md-2">
            <label>Anzahl Regale</label>
            <input type="number" class="form-control" name="LGR_anzahl" value="{{ lager.LGR_anzahl }}" required>
        </div>
        <div class="form-group col-md-2">
                <button type="submit" class="btn btn-primary">Lager speichern</button>
        </div>
        <input type="hidden" value="{{ lager.LGR_id }}" name="LGR_id">         
    </form>
{{ include('footer.twig') }}